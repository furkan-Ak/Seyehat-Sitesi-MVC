@using Seyehat_Sitesi.Models.Sınıflar
@model List<Blog>
@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogImage" style="width:450px; height:200px;" alt="" />
        </div>
        <div class="left-text">

            <h4>@x.Baslik</h4>
            <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@x.Aciklama.Substring(0, 100)</p>
            <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Görüntüle >></span></a></p>
        </div>
    </div>
}