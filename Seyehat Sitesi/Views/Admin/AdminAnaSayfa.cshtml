@using Seyehat_Sitesi.Models.Sınıflar
@model List<Blog> 
@{
    ViewBag.Title = "AdminAnaSayfa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>

    </tr>
    @foreach(var x in Model) {
    <tr>
        <td>@x.ID</td>
        <td>@x.Baslik</td>
        <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">SİL</a></td>
        <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning">GÜNCELLE</a></td>
        <td><a href="#" class="btn btn-default">DETAYLAR</a></td>
    </tr>
    }
</table>
<a href="/Admin/YeniBlog/" class="btn btn-success">Yeni Blog</a>

